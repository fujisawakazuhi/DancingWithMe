<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/sex"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_for_edit_show"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/gender"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/show_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_for_edit_show"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/height"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_for_edit_show"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/height"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/show_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_for_edit_show"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
        android:id="@+id/weight"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_for_edit_show"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/weight"
        android:textColor="#000000"
        android:textSize="50sp" />

        <TextView
            android:id="@+id/ill"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_for_edit_show"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/disease"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/show_ill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_for_edit_show"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="50sp" />

        <!--TextView
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="編輯"
            android:textColor="#548235"
            android:textSize="45sp" />-->

        <Button
            android:id="@+id/previous_page2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1000dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/pre_pg"
            android:textColor="#548235"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_for_edit_show"
            android:gravity="center"
            android:paddingEnd="100dp"
            android:text="@string/gender"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/backmain2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="800dp"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="101dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/home"
            android:textColor="#548235"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/gender_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/gender"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/height_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/height1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:id="@+id/weight_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/weight1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"/>

        <ImageView
            android:id="@+id/virus_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/virus" />

    </FrameLayout>

</RelativeLayout>