<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ADC49E">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textback"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="left|center_vertical|left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:text="@string/go_back"
            android:textAlignment="center"
            android:textColor="#548235"
            android:textSize="88sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonSearch"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--ImageButton
            android:id="@+id/textback"
            android:layout_width="260dp"
            android:layout_height="130dp"
            android:layout_gravity="left|center_vertical|left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitStart"
            android:src="@drawable/back"
            android:textColor="#000000"
            android:textSize="88sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonSearch"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /-->

        <TextView
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:text="@string/search"
            android:textAlignment="center"
            android:textColor="#548235"
            android:textSize="88sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--ImageButton
            android:id="@+id/buttonSearch"
            android:layout_width="260dp"
            android:layout_height="130dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#00000000"
            android:scaleType="fitEnd"
            android:shadowColor="#4420A8"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:src="@drawable/buttonsearch"
            android:textColor="#FFBD7A"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" /-->

    </android.support.constraint.ConstraintLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/cardwarmup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="changePageWarmup"
            android:background="@drawable/textview_border"

            app:cardCornerRadius="12dp"
            >


            <TextView
                android:id="@+id/textwarmup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@string/warm_up"
                android:textColor="#000000"
                android:textSize="79sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardaerobic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="changePageAerobic"
            android:background="@drawable/textview_border"
            app:cardCornerRadius="12dp">


            <TextView

                android:id="@+id/textaerobic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:onClick="changePageAerobic"
                android:text="@string/aerobic"
                android:textColor="#000000"
                android:textSize="79sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardmuscle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="changePageMuscle"
            android:background="@drawable/textview_border"
            app:cardCornerRadius="12dp">


            <TextView

                android:id="@+id/textmuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@string/muscle"
                android:textColor="#000000"
                android:textSize="79sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardcooldown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="changePageCooldown"
            android:background="@drawable/textview_border"
            app:cardCornerRadius="12dp">


            <TextView

                android:id="@+id/textcooldown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@string/cool_down"
                android:textColor="#000000"
                android:textSize="79sp" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

