<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADC49E"
    tools:context=".HeartRateSwingHandFragment">

    <LinearLayout
        android:id="@+id/linear_test"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginStart="205dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_test"
            android:layout_width="1075dp"
            android:layout_height="550dp">

        </com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>

    <ListView
        android:id="@+id/heartrate_test_list"
        android:layout_width="195dp"
        android:layout_height="550dp"
        android:layout_marginStart="5dp"
        android:background="#ffffff">

    </ListView>

    <!--ExpandableListView
        android:id="@+id/ExpListView"
        android:layout_width="195dp"
        android:layout_height="550dp"
        android:layout_marginStart="5dp">

    </ExpandableListView-->

    <LinearLayout
        android:id="@+id/prepare_linear_info_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="550dp">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HR_info"
            android:textSize="45sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/after_display"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_info_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/HR_info"
            android:textSize="70sp" />
        <TextView
            android:id="@+id/ex_time_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/total_time_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/max_value_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47"
                android:layout_marginLeft="10dp"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/min_heart_rate_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:text="@string/min"
                android:textSize="50sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mean_heart_rate_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="erghtr3ergetg"
            android:layout_marginLeft="10dp"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="50sp"/>


    </LinearLayout>

</FrameLayout>