<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sport_list_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sport_list_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="3"
            android:src="@drawable/post_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/sport_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:text="重量訓練"
                android:textSize="60dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sport_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="中階 - 需要器材 - 強烈運動"
                android:textSize="30dp"
                android:textColor="@color/sport_list_description"
                android:textStyle="italic"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
